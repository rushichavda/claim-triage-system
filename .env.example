# Application Configuration
APP_NAME=claim-triage-system
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # Best balance of speed, cost, and accuracy
# Alternative options:
#   gpt-4o-2024-11-20 (latest GPT-4o, best reasoning)
#   o1-preview (best for complex reasoning, slower, more expensive)
#   o1-mini (fast reasoning model, good middle ground)
OPENAI_TEMPERATURE=0.0  # Deterministic outputs for consistency
OPENAI_MAX_TOKENS=4096  # Increased for comprehensive appeals and reasoning
OPENAI_TIMEOUT_SECONDS=60

# LangSmith (Optional - for observability)
LANGSMITH_API_KEY=your-langsmith-key-here
LANGSMITH_PROJECT=claim-triage-system
LANGSMITH_TRACING=false

# Embeddings Configuration
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/vector_store

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=claim_triage

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
ENCRYPTION_KEY=your-encryption-key-here
SECRET_KEY=change-me-in-production-use-strong-random-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Processing
MAX_BATCH_SIZE=10
PROCESSING_TIMEOUT_SECONDS=300

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# File Paths
POLICY_DOCS_PATH=./data/policy_docs
TEST_CASES_PATH=./data/test_cases
